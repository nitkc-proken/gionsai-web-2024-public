{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"lib": ["ESNext"],
		"types": ["node"],
		"esModuleInterop": true,
		"paths": {
			"@packages/*": ["../../packages/*"]
		},
		"declaration": true,
		"resolveJsonModule": true
	}
}
